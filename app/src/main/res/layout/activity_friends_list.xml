<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.international.advert.FriendsListActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/iv_anim"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_height"
        android:layout_centerHorizontal="true"
        android:text="Friends List"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/nav_font"
        />

    <ImageView
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:background="@drawable/img_button"
        android:src="@drawable/img_arrow"
        android:id="@+id/iv_back"/>

    <ImageView
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_button"
        android:src="@drawable/img_plus"
        android:id="@+id/iv_add"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_below="@+id/iv_back"
        android:dividerHeight="3dp"
        android:divider="#00ffffff"
        android:id="@+id/lv_friends"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000"
        android:text="No friends yet."
        android:layout_centerInParent="true"
        android:id="@+id/tv_temper"/>

</RelativeLayout>
