<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.international.advert.ForumDetailActivity">

    <ImageView
        android:id="@+id/iv_anim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Detail"
        android:textColor="#fff"
        android:textSize="@dimen/nav_font"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/iv_anim"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/img_button"
        app:srcCompat="@drawable/img_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="7dp"
        android:scaleType="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="#55ffffff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintDimensionRatio="h,16:9" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_avatar"
        app:layout_constraintLeft_toLeftOf="@+id/iv_anim"
        app:layout_constraintTop_toBottomOf="@+id/iv_goods"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:maxLength="20"
        android:maxLines="1"
        android:text="Myriam Sabrina"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_normal"
        android:text="Chat"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintRight_toRightOf="@+id/iv_goods"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Old Milk Park"
        android:textColor="#005557"
        android:textSize="18sp"
        android:textStyle="italic|bold"
        app:layout_constraintLeft_toLeftOf="@+id/iv_goods"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        android:layout_marginStart="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_goods_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_anim"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/iv_anim"
        app:layout_constraintBottom_toBottomOf="@+id/iv_anim"
        android:layout_marginBottom="8dp"
        android:background="#00ffffff"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00ffffff">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#005557"
                android:textSize="14sp"
                />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
